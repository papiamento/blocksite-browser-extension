{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.2",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "icons": {
        "48": "icons/border-48.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}